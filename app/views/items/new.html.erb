<div class="container">

  <h2>Add a list</h2>

  <%= simple_form_for [@trip, @list, @item] do |f| %>
    <%= f.input :name %>
    <%= f.input :quantity %>
    <%= f.input :inside, as: :radio_buttons %>


    <%= f.button :submit, "Add", class: "btn btn-primary" %>

  <% end %>

  <%= link_to "< Back", trip_path(@list.trip), class: "btn btn-secondary"  %>
</div>

